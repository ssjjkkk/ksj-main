<sqlMapConfig>

	<!-- DB와 연결하는 정보를 properties 파일에 설정해 놓고
		 이 properties 파일의 내용을 읽어올 수 있도록 설정한다.  -->
	<properties resource = "dbinfo.properties" />
	
	<!-- 각각의 sqlMap 파일의 네임스페이스와 id속성값을 연결해서 실행할 쿼리문을 선택한다. -->
	<settings useStatementNamespaces = "true" />
	
</sqlMapConfig>